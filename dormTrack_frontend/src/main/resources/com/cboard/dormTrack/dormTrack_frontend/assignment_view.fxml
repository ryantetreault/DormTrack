<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<VBox spacing="20" alignment="CENTER"
      xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.cboard.dormTrack.dormTrack_frontend.controller.RoomAssignmentController"
      prefWidth="600" prefHeight="500">

    <Label text="Room Assignment" styleClass="heading"/>

    <GridPane hgap="15" vgap="15">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" minWidth="100"/>
            <ColumnConstraints minWidth="200"/>
        </columnConstraints>

        <rowConstraints>
            <RowConstraints minHeight="30"/>
            <RowConstraints minHeight="30"/>
            <RowConstraints minHeight="30"/>
            <RowConstraints minHeight="30"/>
        </rowConstraints>

        <Label text="Student:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <ComboBox fx:id="studentComboBox" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Room:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <ComboBox fx:id="roomComboBox" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Assign Date:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <DatePicker fx:id="dateAssignedPicker" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Button text="Assign Room" onAction="#onAssignRoom" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        <Button text="Back to Dashboard" onAction="#handleBackToDashboard" GridPane.rowIndex="3" GridPane.columnIndex="2"/>
    </GridPane>

    <Separator/>

    <TableView fx:id="assignmentTable" prefHeight="250">
        <columns>
            <TableColumn fx:id="colStudent" text="Student"/>
            <TableColumn fx:id="colRoom" text="Room"/>
            <TableColumn fx:id="colAssigned" text="Date Assigned"/>
            <TableColumn fx:id="colVacated" text="Date Vacated"/>
        </columns>
    </TableView>

</VBox>