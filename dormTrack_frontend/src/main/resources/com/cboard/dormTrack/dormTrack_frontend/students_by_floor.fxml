<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.cboard.dormTrack.dormTrack_frontend.controller.StudentsByFloorController">
    <center>
        <VBox spacing="10.0">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <TableView fx:id="studentTable" prefHeight="400" prefWidth="600">
                <columns>
                    <TableColumn fx:id="studentNameCol" text="Student Name" prefWidth="150"/>
                    <TableColumn fx:id="floorCol" text="Floor" prefWidth="100"/>
                    <TableColumn fx:id="dormNameCol" text="Dorm" prefWidth="150"/>
                    <TableColumn fx:id="raNameCol" text="RA Name" prefWidth="150"/>
                </columns>
            </TableView>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER_LEFT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button text="Back to Dashboard" onAction="#handleBackToDashboard"/>
        </HBox>
    </bottom>
</BorderPane>