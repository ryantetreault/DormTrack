<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<VBox spacing="15" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.cboard.dormTrack.dormTrack_frontend.controller.MaintenanceController"
      style="-fx-padding: 20; -fx-background-color: #ffffff;">

    <Label text="Open Maintenance Requests" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <TableView fx:id="maintenanceTable" prefHeight="300">
        <columns>
            <TableColumn fx:id="studentCol" text="Student" prefWidth="150">
                <cellValueFactory>
                    <PropertyValueFactory property="studentName"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="issueCol" text="Issue" prefWidth="300">
                <cellValueFactory>
                    <PropertyValueFactory property="issueDescription"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="statusCol" text="Status" prefWidth="100">
                <cellValueFactory>
                    <PropertyValueFactory property="status"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="dateCol" text="Date Submitted" prefWidth="150">
                <cellValueFactory>
                    <PropertyValueFactory property="dateSubmitted"/>
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>

    <HBox spacing="10">
        <Button text="Back to Dashboard" onAction="#handleBackToDashboard"/>
        <Button text="Resolve Selected Request" onAction="#handleCloseRequest"/>
        <Button text="View Resolved Requests" onAction="#handleViewResolvedRequests"/>
    </HBox>
</VBox>